dnl modules enabled in this directory by default

APACHE_MODPATH_INIT(dav/limestone)

limestone_objects="mod_dav_repos.lo repos.lo props.lo search.lo dbms.lo util.lo deltav_bridge.lo lock.lo version.lo bind.lo dbms_dbd.lo dbms_deltav.lo dbms_acl.lo dav_acl.lo liveprops.lo dbms_bind.lo bridge.lo lock_bridge.lo deltav_util.lo dbms_locks.lo dbms_quota.lo"


if test "x$enable_dav" != "x"; then
  limestone_enable=$enable_dav
else
  limestone_enable=$dav_enable
fi

case "$host" in
  *os2*)
    # OS/2 DLLs must resolve all symbols at build time
    # and we need some from main DAV module
    dav_fs_objects="$dav_fs_objects ../main/mod_dav.la"
    ;;
esac

APACHE_MODULE(dav_repos, DAV provider for the DBMS, $limestone_objects, , $limestone_enable)

APACHE_MODPATH_FINISH
